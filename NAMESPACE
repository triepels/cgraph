# Import Packages
import(R6)

# Load C files
useDynLib(cgraph)

# Export current graph environment
export(.cg)

# Export array functions
export(`%mul%`)
export(cg.mat.mul)
export(cg.crossprod)
export(cg.tcrossprod)
export(cg.linear)
export(cg.sum)
export(cg.rowSums)
export(cg.colSums)

# Export array methods
#S3method(sum, cg.node)
S3method(mean, cg.node)

# Export cgraph object
export(cgraph)

# Export math functions
export(cg.add)
export(cg.pos)
export(cg.sub)
export(cg.neg)
export(cg.mul)
export(cg.div)
export(cg.pow)
export(cg.sqrt)
export(cg.exp)
export(cg.abs)

# Export math methods
S3method(`+`, cg.node)
S3method(`-`, cg.node)
S3method(`*`, cg.node)
S3method(`/`, cg.node)
S3method(`^`, cg.node)
S3method(sqrt, cg.node)
S3method(exp, cg.node)
S3method(abs, cg.node)

# Export misc functions
export(cg.sigmoid)

# Export print methods
S3method(print, cgraph)
S3method(print, cg.node)
S3method(print, cg.environment)

# Export str methods
S3method(str, cgraph)
S3method(str, cg.environment)

# Export transform functions
export(cg.reshape)
export(cg.c)
export(cg.t)

# Export transform methods
#S3method(c, cg.node)
S3method(t, cg.node)

# Export trig functions
export(cg.sin)
export(cg.cos)
export(cg.tan)
export(cg.tanh)

# Export trig methods
S3method(sin, cg.node)
S3method(cos, cg.node)
S3method(tan, cg.node)
S3method(tanh, cg.node)

# Export wrapper functions
export(name)
export(const)
export(input)
export(parm)
export(expr)
export(perm)


